# Database Configuration
# SQLite database (default for this project)
DATABASE_URL=sqlite:///./railway_fittings.db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_APP_NAME=Railway Fittings Management System

# External API Integration
UDM_API_URL=https://ireps.gov.in/api
TMS_API_URL=https://irecept.gov.in/api
UDM_API_KEY=your-udm-api-key
TMS_API_KEY=your-tms-api-key

# File Storage
UPLOAD_FOLDER=./static/uploads
QR_CODE_FOLDER=./static/qr_codes
MAX_FILE_SIZE=10485760  # 10MB

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@indianrailways.gov.in

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Production Settings
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Mobile App Configuration
EXPO_ACCESS_TOKEN=your-expo-access-token
PUSH_NOTIFICATION_KEY=your-push-notification-key

# Analytics and Monitoring
SENTRY_DSN=your-sentry-dsn-url
GOOGLE_ANALYTICS_ID=your-ga-id

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=railway-fittings-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
